extends ../main.layout.pug

block variables
  - var title = 'Обо мне'

block scripts
  script(src='about.bundle.js')

block content
  section.hero
    - 
        var socials = [
          ['https://vk.com/sotnikova_m', 'vk'],
          ['https://github.com/myakishevami', 'github'],
          ['https://www.linkedin.com/in/%D0%BC%D0%B0%D1%80%D0%B8%D1%8F-%D0%BC%D1%8F%D0%BA%D0%B8%D1%88%D0%B5%D0%B2%D0%B0-84148714b/', 'in']
          ]
    .hero__header
          ul.socials
            each item in socials
              li.socials__item
                a(href=`${item[0]}`).socials__link
                  +icon(item[1], 'socials__link-icon')
          .hero__menu
           a(href="").hamburger
                +icon('hamburger', 'socials__link-icon')
              
    .hero__content
        .hero__title
          .section-title
            .user.hero__user
               .user__pic
                  img(src='./assets/images/header_logo.jpg', alt="").user__pic-img
               .user__description
                 .user__name Мария Мякишева
                 .user__info Личный сайт разработчика

    a(href="#").down-btn.hero__down-btns
         +icon('arrow_down', 'hero__down-icon')

    .about__triangles
      .triangles
        .triangles__left
          svg(viewbox = "0 0 900 180" preserveAspectRatio = "none").triangle.triangle__left
            polygon(points = "0 0, 0 180, 900 180")
        .triangles__right  
          svg(viewbox = "0 0 900 180" preserveAspectRatio = "none").triangle.triangle__right
            polygon(points = "900 0, 900 180, 0 180")

  section.about
    .about__left.works__left
      .block-title.works__block-title САЙТ ШКОЛЫ ОНЛАЙН ОБРАЗОВАНИЯ
      .about__left-content
          
    .about__right
            
  section.talk
    .talk__title
      .block-title.talk-block-title Что обо мне говорят
    .talk__reviews
      ul.reviews__list
        li.reviews__elem
          img(src='./assets/images/Dmitrii.jpg', alt="pic_review").reviews__elem-img
          .reviews__elem-text
            p Этот парень проходил обучение веб-разработке не где-то, а в LoftSchool! 2 месяца только самых тяжелых испытаний и бессонных ночей!
          .reviews__elem-author
            .reviews__elem-author-name
              p Ковальчук Дмитрий
            .reviews__elem-author-work 
              p — основатель Loftschool
        li.reviews__elem
          img(src='./assets/images/Vladimir.jpg', alt="pic_review").reviews__elem-img
          .reviews__elem-text
            p Этот код выдержит любые испытания. Только пожалуйста, не загружается сайт на слишком старых браузерах!
          .reviews__elem-author
            .reviews__elem-author-name
              p Сабанцев Владимир
            .reviews__elem-author-work 
              p — преподаватель
  footer.main__footer
    .footer__row
      .footer__col
        .footer__text
          p Этот сайт я сделал в рамках обучения в Школе онлайн образования LoftSchool. 
    .footer__row
      .footer__col
        nav.menu
          ul.menu__list
            each item in ['Мои работы', "Обо мне", "Блог", "Авторизация"]
              li.menu__item
                a(href="").menu__link #{item}

      .footer__col.footer__col_justify_end
        ul.socials
            each item in socials
              li.socials__item
                a(href=`${item[0]}`).socials__link
                  +icon(item[1], 'socials__link-icon socials__link-icon-opacity')

    .footer__row
      - 
                var contacts = [
                  ['skype', 'smi.tomsk', 'skype:Smi.tomsk'],
                  ['phone', '+7 983 302 3806', 'tel:+79833023806'],
                  ['envelope_n', 'smi.tomsk@gmail.com', 'mailto:smi.tomsk@gmail.com'],
                  ['map_n', 'Новосибирск, ул. Лебедевского, д. 2/2', 'https://www.google.com/maps/place/%D1%83%D0%BB.+%D0%9B%D0%B5%D0%B1%D0%B5%D0%B4%D0%B5%D0%B2%D1%81%D0%BA%D0%BE%D0%B3%D0%BE,+2%2F2,+%D0%9D%D0%BE%D0%B2%D0%BE%D1%81%D0%B8%D0%B1%D0%B8%D1%80%D1%81%D0%BA,+%D0%9D%D0%BE%D0%B2%D0%BE%D1%81%D0%B8%D0%B1%D0%B8%D1%80%D1%81%D0%BA%D0%B0%D1%8F+%D0%BE%D0%B1%D0%BB.,+630123/@55.081945,82.9223351,17z/data=!3m1!4b1!4m5!3m4!1s0x42dfe514adce78fd:0xb716094ebd6c386e!8m2!3d55.081945!4d82.924529?hl=ru-RU']
